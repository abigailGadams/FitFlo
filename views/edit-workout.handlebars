   <h4 class="card-header text-uppercase">Edit Workout</h4>
    <form id="edit-post-form" class="card-body">
      <div>
        <label class="form-label" for="workout-title">Workout</label>
        <input class="form-input-login"type="text" id="workout-title" name="workout-title" autofocus="true"value="{{workout.workout_title}}"/>    
          <div class="card">          

       {{workout.id}}
       {{workout.workout_title}}

      {{#each workout}}
      {{#each exercises}}
      <option value="{{id}}">      
        {{workout.workout_title}} - {{exercise_title}}
      </option>
      {{/each}}
      {{/each}}


<div class="card">
  <h3 class="card-header">Add Your Work Out</h3>
  <div>
    <select id="workout_id">
      {{#each workout as | workout |}}
      {{#each exercises}}
      <option value="{{id}}">      
        {{workout.workout_title}} - {{exercise_title}}
      </option>
      {{/each}}
      {{/each}}
    </select>
  </div>
</div>
       
       
      
